<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/lrtbp_10"
    android:layout_marginBottom="@dimen/lrtbp_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="left"
        android:paddingTop="@dimen/lrtbp_10"
        android:paddingBottom="@dimen/lrtbp_10"
        android:paddingLeft="@dimen/lrtbp_25"
        android:paddingRight="@dimen/lrtbp_15"
        android:background="@drawable/chat_bubble_incoming"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/lrtbp_10"
            android:layout_marginTop="@dimen/lrtbp_10"
            android:src="@drawable/ic_smile"
            android:id="@+id/imgAttach"
            android:layout_width="@dimen/wh_50"
            android:layout_height="@dimen/wh_50"  />

        <TextView
            android:layout_marginLeft="@dimen/lrtbp_10"
            android:layout_marginTop="@dimen/lrtbp_10"
            android:text="left"
            android:id="@+id/txtLeftMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>