<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kapp.chat.fragments.SettingsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profile"
            android:orientation="horizontal"    
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="@dimen/lrtbp_10"
                android:scaleType="center"
                android:background="@drawable/user_round"
                android:id="@+id/imgProfile"
                android:src="@drawable/ic_user_24"
                android:layout_width="@dimen/wh_70"
                android:layout_height="@dimen/wh_70" />
            <LinearLayout
                android:paddingLeft="@dimen/lrtbp_10"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtUserName"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtStatus"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Hey there! I am using KChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:src="@drawable/ic_secure"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:textColor="@color/textColorPrimary"
                    android:text="Account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:src="@drawable/ic_chats"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/textColorPrimary"
                    android:text="Chats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:src="@drawable/ic_bell"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:textColor="@color/textColorPrimary"
                    android:text="Notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:src="@drawable/ic_data_usage"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:textColor="@color/textColorPrimary"
                    android:text="Data usage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:src="@drawable/ic_contacts"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:textColor="@color/textColorPrimary"
                    android:text="Contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>