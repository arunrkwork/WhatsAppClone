<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lContactItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lrtbp_10"
        android:layout_marginRight="@dimen/lrtbp_10"
        android:layout_marginTop="@dimen/lrtbp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/wh_50"
            android:layout_height="@dimen/wh_50"
            android:src="@drawable/ic_user" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/lrtbp_10"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="@dimen/lrtbp_10"
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Name" />

            <TextView
                android:layout_marginBottom="@dimen/lrtbp_10"
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lrtbp_10"
                android:text="Status" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/lRight"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/lrtbp_5"
                android:id="@+id/txtNewMessageCount"
                android:textSize="@dimen/txt_10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="10"
                android:background="@drawable/chat_room_message_count_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>